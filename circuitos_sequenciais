#PROCESS - lista de sensibilidade

[rótulo:] PROCESS [(lista_de_sensibilidade)] [IS]
             [parte_declarativa]  
         BEGIN
             afirmação_sequencial;
             afirmação_sequencial;
             ...
         END PROCESS [rótulo];

#IF
IF condição THEN
             afirmação_sequencial;
             afirmação_sequencial;
             ...
         ELSIF condição THEN
             afirmação_sequencial;
             afirmação_sequencial;
             ...
         ELSE
             afirmação_sequencial;
             afirmação_sequencial;
             ...
         END IF [rótulo];

#DIFERENCAS ENTRE SIGNAL E E VARIABLE 
